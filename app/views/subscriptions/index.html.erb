<% if flash[:error].present? %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_tag('/subscriptions', method: 'post', class: 'mt-3') do %>
        <div class="form-group row">
          <%= label_tag 'subscription[email]', 'Email:', class: 'col-form-label col-md-4 text-md-right' %>
          <div class="col-md-8">
            <%= email_field_tag 'subscription[email]', '', class: 'form-control', required: true %>
          </div>
        </div>
        <div class="form-group row">
          <%= label_tag 'subscription[plan_id]', 'Select Plan:', class: 'col-form-label col-md-4 text-md-right' %>
          <div class="col-md-8">
            <%= select_tag 'subscription[plan_id]', options_for_select(@plans), class: 'form-control', include_blank: 'Select an option', required: true %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-8 offset-md-4">
            <%= submit_tag 'Submit', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>